{
  "compilerOptions": {
    "target":"es2015",
    "module": "amd",
    "lib": [
      "es2015"
    ],
    "outDir": "./dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true    
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}
